// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  userId Int @id @default(autoincrement())
  wordTags WordTag[]
  words  Word[]
  email  String @unique @db.VarChar(50)
  username String @unique @db.VarChar(50)
  password String 
  role UserRole @default(student)
  updatedAt String
  createdAt String
}



model AssetLibrary{
  mediaId Int @id @default(autoincrement())
  word Word?
  filename String
  originalName String
  mimetype String
  size Int
  filePath String
  viewUrl String? @default("")
  aspectRatio Float? @default(1)
  updatedAt String
  createdAt String
}

model Word{
  wordId Int @id @default(autoincrement())
  user User @relation(fields: [userId],references: [userId])
  userId Int @default(1)
  wordTag WordTag? @relation(fields: [wordTagId],references: [wordTagId])
  wordTagId Int?
  media AssetLibrary? @relation(fields: [mediaId],references: [mediaId])
  mediaId Int? @unique
  word String
  description String
  example String
  level WordLevel?
  partOfSpeech String? @default("")
  isPublic  Boolean @default(false)
  createdAt String
  updatedAt String

  @@unique([word, wordTagId ,userId])
}

model WordTag{
  wordTagId Int @id @default(autoincrement())
  user User @relation(fields: [userId],references: [userId])
  userId Int @default(1)
  words Word[]
  tag String   
  color String @default("")
  createdAt String
  updatedAt String

  @@unique([tag,userId])
}

enum UserRole{
  admin
  teacher
  student
}

enum WordLevel{
  A1
  A2
  B1
  B2
  C1
  C2
  N
}